#include<stdio.h>
int main()
{
	int a[20],i,x,n;
	printf("enter the elements:");
	scanf("%d",&n);
	printf("enter elements in array:\n");
	for(i=0;i<n;++i)
	{
		scanf("%d",&a[i]);
	}
	printf("enter element to search:\n");
	scanf("%d",&x);
	for(i=0;i<n;++i)
	{
	if(a[i]==x)
	{
		break;
	}
}
	if(i<n)
	{
		printf("element of found index %d",i);
	}
	else
	printf("element not found");
}
